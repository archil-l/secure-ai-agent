{
  "name": "secure-ai-agent",
  "version": "0.1.0",
  "bin": {
    "secure-ai-agent": "bin/deploy.ts"
  },
  "scripts": {
    "build": "tsc",
    "build:lambda": "tsc --project lambda/agent/tsconfig.json && tsc --project lambda/cookie-signer/tsconfig.json && tsc --project lambda/authorizer/tsconfig.json",
    "deploy": "export $(grep -v '^#' .env | xargs) && yarn build:lambda && npx cdk deploy WebSocketAgentStack",
    "synth": "npx cdk synth WebSocketAgentStack",
    "bootstrap": "npx cdk bootstrap",
    "destroy": "npx cdk destroy WebSocketAgentStack",
    "keys:update": "bash ./keys/generate-and-update-keys.ssh && bash ./keys/verify-websocket-keys.sh"
  },
  "dependencies": {
    "@aws-sdk/client-apigatewaymanagementapi": "^3.840.0",
    "@aws-sdk/client-bedrock-runtime": "^3.842.0",
    "@aws-sdk/client-secrets-manager": "^3.835.0",
    "aws-cdk-lib": "^2.202.0",
    "aws-sdk": "^2.1692.0",
    "constructs": "^10.4.2"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.150",
    "@types/aws-sdk": "^2.7.4",
    "@types/node": "^24.0.4",
    "typescript": "^5.3.3"
  },
  "main": "index.js",
  "license": "MIT"
}

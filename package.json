{
  "name": "chatbot-cloudfront-secure",
  "version": "0.1.0",
  "bin": {
    "chatbot-cloudfront-secure": "bin/deploy.ts"
  },
  "scripts": {
    "build": "tsc",
    "build:lambda": "tsc --project lambda/chatbot/tsconfig.json && tsc --project lambda/cookie-signer/tsconfig.json",
    "deploy": "export $(grep -v '^#' .env | xargs) && yarn build:lambda && npx cdk deploy",
    "synth": "cdk synth",
    "keys:update": "bash ./keys/generate-and-update-keys.ssh && bash ./keys/add-cloudfront-public-key.sh",
    "dev": "export $(grep -v '^#' .env | xargs) && yarn deploy"
  },
  "dependencies": {
    "@aws-sdk/client-secrets-manager": "^3.835.0",
    "aws-cdk-lib": "^2.202.0",
    "constructs": "^10.4.2"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.150",
    "@types/node": "^24.0.4",
    "typescript": "^5.3.3"
  },
  "main": "index.js",
  "license": "MIT"
}
